<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,initial-scale=1.0,width=device-width" />
    <meta name="format-detection" content="telephone=no,email=no,date=no,address=no">
    <title>首页</title>
    <link rel="stylesheet" type="text/css" href="./css/mui.min.css" />
    <link rel="stylesheet" type="text/css" href="./css/api.css" />
    <link rel="stylesheet" type="text/css" href="./css/common.css" />
    <link rel="stylesheet" type="text/css" href="./fonts/iconfont.css" />
    <link rel="stylesheet" type="text/css" href="./fonts/sfont.css" />
    <style media="screen">
    </style>
</head>
<body id="wrap">
    <nav class="home-bar-tab mui-bar mui-bar-tab" id="nav" style="display:none;">
        <a class="mui-tab-item mui-active" href="#home">
            <span class="mui-icon iconfont icon-home"></span>
            <span class="mui-tab-label">首页</span>
        </a>
        <a class="mui-tab-item" href="#Give">
            <span class="mui-icon iconfont icon-category"></span>
            <span class="mui-tab-label">分类</span>
        </a>
        <a class="mui-tab-item" href="#bag">
            <span class="mui-icon iconfont icon-bag"></span>
            <span class="mui-tab-label">购物袋</span>
        </a>
        <a class="mui-tab-item" href="#charge" id="duihuan">
              <span class="mui-icon iconfont i_gift_1"></span>
              <span class="mui-tab-label">礼包</span>
          </a>
          <a class="mui-tab-item" href="#me">
              <span class="mui-icon iconfont icon-me"></span>
              <span class="mui-tab-label">个人中心</span>
        </a>
    </nav>
</body>
<script type="text/javascript" src="./script/api.js"></script>
<script type="text/javascript" src="./script/mui.min.js"></script>
<script type="text/javascript" src="./script/zepto.min.js"></script>
<script type="text/javascript" src="./script/common.js"></script>
<script type="text/javascript">

    var frames = ['home', 'Give', 'bag', 'charge', 'me'],
        nvHeight = 57,
        currentFrame = 'home'

    function welcome(){
        $("#nav").hide();
        api.openFrameGroup ({
            name: 'welcomePage',
            background: '#fff',
            scrollEnabled: false,
            rect: {
                 x: 0,
                 y: 0,
                 w: 'auto',
                 h: 'auto'
            },
            index: 1,
            frames: [{
                name: 'welcomePage',
                url: './html/win/welcomePage.html',
                bgColor: '#fff'
            }]
        }, function(ret, err){

        });
        api.setFullScreen({
            fullScreen: false
        });
    }

    function indexData(){
        var systemType = api.systemType;
        $("#nav").show();

        api.closeFrameGroup({
            name: 'welcomePage'
        });

            openFrame(currentFrame)
            // 用户登陆
            // console.log(app.memberId)
            if(app.memberId) {
                // 获取购物车信息
                api.ajax({
                    url: app.server+'caritem/getCartAndOrderNum',
                    method: 'post',
                    data: {
                      values:{
                        memberId: app.memberId,
                        token:app.token
                      }
                    }
                }, function(ret, err) {
                  console.log(JSON.stringify(ret))
                    if (ret.code==0&&ret.data.cartItemcount>0) {
                        $('.icon-bag').html('<span class="mui-badge">' + ret.data.cartItemcount + '</span>')
                    }else{
                       $('.icon-bag').html('')
                    }
                });
                api.sendEvent({
                    name: 'nums',
                    extra: {
                        key1: 'value1',
                        key2: 'value2'
                    }
                });
            }
        }

        // 底部bar 点击事件
        mui(".home-bar-tab").on('tap', '.mui-tab-item:not(.mui-active)', function() {
            //获取id
            var id = this.getAttribute('href')
            if(currentFrame !== id.slice(1)) {
              openFrame(id.slice(1))
            }
        })
        // 隐藏其他frame
        window.hideAllFrame = function() {
            frames.forEach(function(fname) {
                api.setFrameAttr({
                    name: fname,
                    hidden: true
                })
            })
            api.setFrameAttr({
                name: 'frame-search',
                hidden: true
            })
            api.setFrameGroupAttr({
              name: 'bag-frame-group',
              hidden: true
            })
        }

        // 打开frame

        window.openFrame = function(frame, reload){
            var rects = {
              // 首页
              home : {
                x: 0,
                y: app.searchBarHeight+0,
                w: 'auto',
                h: api.winHeight - nvHeight - app.searchBarHeight +6
              },
              // 分类
              Give : {
                x: 0,
                y: 0,
                w: 'auto',
                h: api.winHeight - nvHeight +6
              },
              // 购物袋
              bag : {
                x: 0,
                y: 0,
                w: 'auto',
                h: 108
              },
              // 充值
              charge : {
                x: 0,
                y: 0,
                w: 'auto',
                h: api.winHeight - nvHeight+6
              },
              // 个人中心
              me : {
                x: 0,
                y: 0,
                w: 'auto',
                h: api.winHeight - nvHeight+6
                // api.winHeight - nvHeight -  app.searchBarHeight
              }
            }

            window.hideAllFrame()
            currentFrame = frame

            $('.mui-tab-item').removeClass('mui-active')
            $('.mui-tab-item[href="#' + frame + '"]').addClass('mui-active')
            if(frame=="Give"){
                api.openFrameGroup ({
                    name: 'give',
                    background: '#fff',
                    scrollEnabled: false,
                    rect: {
                         x: 0,
                         y: 0,
                         w: 'auto',
                         h: api.winHeight - nvHeight+ 6
                    },
                    index: 1,
                    frames: [{
                        name: 'give',
                        url: './html/Give-frames/index.html',
                        bgColor: '#fff'
                    }]
                }, function(ret, err){
                    if( ret ){
                        //  alert( JSON.stringify( ret ) );
                    }else{
                        //  alert( JSON.stringify( err ) );
                    }
                });

            }else{
                api.setFrameGroupAttr({
                    name: 'give',
                    hidden: true
                });
                api.openFrame({
                    name: frame,
                    url: './html/' + frame + '-frames/index.html',
                    rect: rects[frame],
                    bgColor: 'rgba(0, 0, 0, 0)',
                    bounces: true,
                    reload : reload || false,
                    pageParam:{
                        backs:1
                    },
                    animation: {
                        type: 'fade',                //动画类型（详见动画类型常量）
                        duration: 100                //动画过渡时间，默认300毫秒
                    },
                    vScrollBarEnabled: false,
                    hScrollBarEnabled: false
                })
            }

            // 首页、分类页面打开顶部的搜索
            if(['home'].indexOf(frame) !== -1){
               api.openFrame({
                   name: 'frame-search',
                   url: './html/common-frames/search-bar.html',
                   rect: {
                       x: 0,
                       y: 0,
                       w: 'auto',
                       h: app.searchBarHeight
                   },
                   bounces: false,
                   vScrollBarEnabled: false,
                   hScrollBarEnabled: false
               })
            }

            if(frame === 'bag') {
                api.setFrameGroupAttr({
                    name: 'bag-frame-group',
                    hidden: false,
                    reload:true
                })
            }
        }
    apiready = function() {
      if(api.pageParam.tuichu!=1){
     welcome()
     }else{
       indexData()
     }
        app.ready()
        api.setFullScreen({
            fullScreen: false
        });
          var ajpush = api.require('ajpush');
          //初始化推送服务
          ajpush.init(function(ret) {
            if (ret && ret.status){
            }
         });

        ajpush.setListener(
        function(ret) {
            var id = ret.id;
            var title = ret.title;
            var content = ret.content;
            var extra = ret.extra;
            api.sendEvent({
                name: 'nums',
                extra: {
                    key1: 'value1',
                    key2: 'value2'
                }
            });
        }
    );


var ua = navigator.userAgent.toLowerCase();
if (/iphone|ipad|ipod/.test(ua)) {
   //点击外部跳转指定页面=>  ios
   api.addEventListener({
    name: 'noticeclicked'
}, function(ret, err) {
        var ajpush = ret.value;
        var content = ajpush.content;
        var extra = ajpush.extra;
        // console.log(JSON.stringify(extra)+'++++++++'+content+'++++++++')
        // console.log(extra.MessageType)
        if(extra.MessageType==1){
          api.openWin({
              name: 'details',
              url: './html/message/sysMsgDetail.html',
              pageParam: {
                  name: 'test',
                  ids:extra.id
              },
              animation: {
                type: 'movein',
                duration: 200
              }
          });
        }
        api.openWin({
            name: 'message-index',
            url: './html/message/index.html',
            pageParam: {
                name: 'test'
            },
            animation: {
              type: 'movein',
              duration: 200
            }
        });
})
} else if (/android/.test(ua)) {
//点击外部跳转指定页面=>  android
   api.addEventListener({
      name: 'appintent'
   }, function(ret, err) {
        var ajpush = ret.appParam.ajpush;
        var id = ajpush.id;
        var title = ajpush.title;
        var content = ajpush.content;
        var extra = ajpush.extra;
        // console.log('android='+content)
        if(extra.MessageType==1){
          api.openWin({
              name: 'details',
              url: './html/message/sysMsgDetail.html',
              pageParam: {
                  name: 'test',
                  ids:extra.id
              },
              animation: {
                type: 'movein',
                duration: 200
              }
          });
        }
        api.openWin({
            name: 'message-index',
            url: './html/message/index.html',
            pageParam: {
                name: 'test'
            },
            animation: {
              type: 'movein',
              duration: 200
            }
        });
  })
}


}

</script>

</html>

<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,initial-scale=1.0,width=device-width"/>
    <meta name="format-detection" content="telephone=no,email=no,date=no,address=no">
    <title>设置密码</title>
    <link rel="stylesheet" type="text/css" href="../../css/mui.min.css" />
    <link rel="stylesheet" type="text/css" href="../../css/api.css" />
    <!-- <link rel="stylesheet" type="text/css" href="../../css/common.css" /> -->
    <style media="screen">
      #page-pwsetting {
        height: 100%;
        overflow: hidden;

      }
      body {
          height: 100%;
      }



      .page-lr-main {
          background: url(../../image/page-bk.png) -1px -1px no-repeat;
          background-size: 101% 101%;
          width: 100%;
          height: 100%;
      }

      .page-lr-main .content-wrap {
          height: 80%;
          margin: 0 2rem;
      }

      .content-title {
          font-size: 1.5rem;
          text-align: center;
          line-height: 1;
          padding-top: 2rem;
          color: #E50043;
      }

      .page-lr-main .mui-input-group {
          background: transparent;
          color: #999;
      }

      .page-lr-main .mui-input-group {
          background: transparent;
          color: #999;
      }

      .page-lr-main .mui-input-group .mui-input-row {
          margin-top: 1rem;
      }

      .mui-input-row input {
          border-bottom: 1px solid;
          padding-right: 38px;
      }

      button.m.active {
          border: 1px solid #E50043;
          background-color: #E50043;
      }

      button.m {
          border: 1px solid #bbb;
          background-color: #bbb;
          margin: 2rem auto;
          width: 76%;
          line-height: 26px;
          font-size: 18px;
          padding: 8px 0;
          color: #fff;
      }

      .mui-input-group:before,
      .mui-input-group:after {
          position: absolute;
          top: 0;
          right: 0;
          left: 0;
          height: 0px !important;
          content: '';
          -webkit-transform: scaleY(.5);
          transform: scaleY(.5);
          background-color: #c8c7cc;
      }

      .content-footer {
          font-size: 14px;
          color: #999;
          margin: 2rem 1rem 2rem;
          line-height: 2;
      }

      .content-footer label {
          marign-left: 10px;
          border-bottom: 1px solid;
      }

      .page-lr-main .mui-checkbox.mui-left label {
          padding-left: 46px;
      }
    </style>
</head>
<body>
    <div id="page-pwsetting">
        <div id="page-pwsetting-main" class="page-lr-main">
            <div class="content-wrap">
                <p class="content-title">设置密码</p>
                <form class="mui-input-group rg-input-group">
                    <div class="mui-input-row">
                        <input type="password" class="mui-input-clear pw-input" placeholder="请设置您的6位以上密码">
                    </div>
                    <div class="mui-input-row">
                        <input type="password" class="mui-input-clear re-pw-input" placeholder="请再次输入密码">
                    </div>
                    <div class="mui-button-row">
                        <button type="button" class="m bt-register shadow active">立即注册</button>
                    </div>
                </form>
                </div>
                <div class="content-footer">
                    <div class="mui-input-row mui-checkbox mui-left">
                    <label>我已阅读并同意创盟易购注册协议</label>
                    <input ref=".bt-register" name="protocal-agreed" type="checkbox" checked>
                </div>
            </div>
        </div>
    </div>
</body>
<script type="text/javascript" src="../../script/api.js"></script>
<script type="text/javascript" src="../../script/mui.min.js"></script>
<script type="text/javascript" src="../../script/zepto.min.js"></script>
<script type="text/javascript" src="../../script/common.js"></script>
<script type="text/javascript" src="../../script/md5.min.js"></script>
<script type="text/javascript">
  apiready = function(){
    
    var params = api.pageParam;
    $('#page-pwsetting').height(api.winHeight);
    mui('#page-pwsetting').on('tap', '.bt-register.active', function(){
      if(!app.validate({
        password: {
          value: $('.pw-input').val(),
          type : 'PASSWORD',
        }
      })) return;
      if($('.pw-input').val().trim() === $('.re-pw-input').val().trim()) {
          params.password = md5($('.pw-input').val().trim());
          app.ajax({
            url : 'member/register',
            data: params,
            success: function(data){
              // mui.alert(data.msg)
            //   api.closeWin({});
              api.openWin({
                  name: 'page-login',
                  url: 'login.html',
                  animation : {
                    type: 'movein',
                    duration: 200
                  }
              });
                // api.closeWin({})

            }
          })
      } else {
        mui.alert('两次密码不一致')
        return;
      }
    })
  }
</script>
</html>

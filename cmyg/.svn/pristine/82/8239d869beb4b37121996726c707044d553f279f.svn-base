    <style>
    body {
        position: relative;
        width: 100%;
        background: #fff;
    }
    /*.nav{overflow: hidden;}*/

    .clear {
        clear: both;
    }
    /*.navTab{width: 120%;overflow-x: scroll;position: absolute;}*/

    .shoping {
        margin-top: 60px;
        position: fixed;
        width: 100%;
    }
    /*.nav{position: relative;}*/

    .nav ul li {
        float: left;
        width: 16.66%;
        text-align: center;
        height: 40px;
        line-height: 40px;
        color: #666;
        border-bottom: 1px solid #666
    }

    .nav ul .thisLi {
        color: #E71C4C;
        border-bottom: 3px solid #E71C4C
    }

    .allOrder {
        text-align: center;
        padding: 14px 0;
    }

    .allOrder i {
        background: url(../../../../image/3452342.png) no-repeat;
        width: 20px;

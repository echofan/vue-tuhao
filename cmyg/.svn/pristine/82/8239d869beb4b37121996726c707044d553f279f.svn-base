    .tablesTitle {
        background-color: #8B8B8B;
        height: 30px;
        line-height: 30px;
        margin-bottom: 10px;
    }

    .tablesTitle span {
        display: inline-block;
        text-align: center;
        font-size: .6rem;
        color: #fff;
    }

    .tablesCont {
        /*overflow: hidden;*/
        height: 100%;
        top: 90px;
    }

    /*.tablesContUl {
        -webkit-overflow-scrolling: touch;
    }*/

    .tablesTitle {
        overflow: hidden;
    }

    .tablesCont ul li span {
        display: inline-block;
        font-size: .6rem;
        text-align: center;
        color: #747474
    }

    .titTime,
    .contTime {
        width: 25%;
    }

    .titShop,
    .contShop {
        width: 35%;
    }

    .titOrder,
    .contOrder {
        width: 18%;
    }

    .titInt,
    .contInt {
        width: 13%;
    }

    .contShop,
    .contOrder,
    .contInt,
    .contRatio {
        line-height: 46px;
        position: relative;
        top: -8px;
    }

    .contTime {
        margin-top: 5px;
    }

    .tablesContUl li {
        height: 50px;
    }

    .tablesContUl li:nth-child(odd) {
        background-color: #DCDEDD
    }

    .tablesContUl li:nth-child(even) {
        background-color: #EEEEEE
    }

    .contTime,.titTime{
        width: 20%;
    }
    .contShop,.titShop{
        width: 30%;
    }
    .contOrder,.titOrder{
        width: 20%;
    }
    .contRatio,.titRatio{
        width: 10%;
    }
    .contInt,.titInt{
        width: 15%;
    }
    .tablesContUl span:not(:first-child){
        margin-left: 4px;
    }
    </style>
</head >

<body>
    <div class="allOrder">
        <span class="allOrderTitle">充值获得</span>
        <i></i>
        <span class="allOrderNum"></span>
    </div>
    <!-- 购物分 -->
    <div class="tables recharge">
       <div class="tablesTitle">
           <span class="titTime">时间</span>
           <span class="titShop">充值单号</span>
           <span class="titOrder">充值金额</span>
           <span class="titRatio">比例</span>
           <span class="titInt">购物分</span>
       </div>
       <div class="tablesCont">
           <ul class="tablesContUl">
               <!-- <li>
             <span class="contTime">2017-04-29  10:59</span>
             <span class="contShop">45278121</span>
             <span class="contOrder">10000</span>
             <span class="contRatio">100%</span>
             <span class="contInt">30</span>
           </li> -->

           </ul>
           <div class="thisNull" style="margin-top:200px;display:none;">
               <p style="text-align:center;">暂无数据...</p>
           </div>
       </div>
   </div>
</body>
<script type="text/javascript" src="../../../../script/api.js"></script>
<script type="text/javascript" src="../../../../script/mui.min.js"></script>
<script type="text/javascript" src="../../../../script/template-native.js"></script>
<script type="text/javascript" src="../../../../script/zepto.min.js"></script>
<script type="text/javascript" src="../../../../script/common.js"></script>
<script src="./index.js"></script>
<script>
apiready = function(){
    app.ajax({
        url: 'score/record/rechargeDetail',
        type: 'get',
        data: {
            token: $api.getStorage('token'),
            memberId: $api.getStorage('memberId'),
            pageSize: '10',
            pageNum: '1'
        },
        success: function(ret) {
            // alert(JSON.stringify(ret))
            if(ret.data == '' || null){
                $(".thisNull").show()
            }else{
                $(".thisNull").hide()
            }
            $(".tablesContUl").html('');
            for (i in ret.data) {
                var times = formatDateTime(ret.data[i].rechargeDate)
                var gouwuHtml = '<li>' +
                    '<span class="contTime">' + times + '</span>' +
                    '<span class="contShop">' + ret.data[i].orderNo + '</span>' +
                    '<span class="contOrder">￥'+ret.data[i].amount+'</span>'+
                    '<span class="contRatio">'+ret.data[i].radio+'</span>'+
                    '<span class="contInt">' + ret.data[i].shopScore + '</span></li>';
                $(".tablesContUl").append(gouwuHtml);
            }
        }
    })
    app.ajax({
        url: 'score/record/buyDetailCount',
        type: 'get',
        data: {
            token: $api.getStorage('token'),
            memberId: $api.getStorage('memberId')
        },
        success: function(ret) {
            // alert(JSON.stringify(ret.data.count))
            $(".allOrderNum").text(ret.data.count)
        }
    })
    // 下拉刷新
    api.setRefreshHeaderInfo({
            bgColor: '#fff',
            textColor: '#333',
            textDown: '下拉刷新...',
            textUp: '松开刷新...'
        }, function(ret, err) {
            //在这里从服务器加载数据，加载完成后调用api.refreshHeaderLoadDone()方法恢复组件到默认状态
            window.location.reload()
            api.refreshHeaderLoadDone()
    })
}
</script>

</html>

<script type="text/javascript">
    //头部的更换
    function rds(){
       app.ajax({
         url: 'member/getMyInfo',
         data: {
             token: $api.getStorage('token'),
             memberId: $api.getStorage('memberId')
         },
         showLoading: false,
         success:function(data){
           if (data.data.headImg == '' || data.data.headImg == null) {
               $("#userImg").attr('src', '../../../image/g3.jpg');
               $("#bigImg").attr('src', '../../../image/g3.jpg');
           } else {
               $("#userImg").attr('src', data.data.headImg);
               $("#bigImg").attr('src', data.data.headImg);
           }
         }
       })
    }
        apiready = function() {
        app.ready()
        app.countDown(5*60)
        rds()
        $("#userImg").on('tap', function() {
            api.getPicture({
                sourceType: 'library',
                encodingType: 'jpg',
                mediaValue: 'pic',
                destinationType: 'base64',
                allowEdit: true,
                quality:100,
                targetWidth:500,
                targetHeight: 500,
                saveToPhotoAlbum: false
            }, function(res, err) {
                if (res) {
                  console.log(JSON.stringify(res.data))
                  var a = document.getElementById('progress'); //显示进度，也可用进度条，在进度从95%到100%的时候有个明显停顿，此时文件已经传输完成，是在获取回调信息。
                  var b = document.getElementById('userImg');
                  var fileurl = res.data; //文件地址，也可通过文件选择器获得
                  var baseUrl = 'http://oriuj6hhx.bkt.clouddn.com/'; //七牛给你的测试域名，也可使用自己捆绑的域名youe.xxx.com
                  var qiniu = api.require('qiniuUpfile');
                  var timestamp=new Date().getTime();
                  qiniu.upfile({
                      file: fileurl,
                      name: timestamp
                  }, function(ret, err) {
                      if (ret.status) {
                          if (ret.oper == "complete") {
                              //上传成功后组装访问路径，或直接访问文档
                              console.log(JSON.stringify(ret))
                              app.ajax({
                                url:'member/updateImgAndNickName',
                                type:'POST',
                                data:{
                                    token: $api.getStorage('token'),
                                    memberId: $api.getStorage('memberId'),
                                    headImg : baseUrl + ret.info.key
                                },
                                success : function(res){
                                    $("#userImg").attr("src",baseUrl + ret.info.key)
                                    $("#bigImg").attr("src",baseUrl + ret.info.key)
                                },
                                error : function(err){
                                  alert("上传失败！")
                                }
                              })
                              console.log(b, baseUrl + ret.info.key);
                          } else if (ret.oper == "progress") {
                              //上传过程中获取进度数据
                              console.log(a, ret.percent);
                          }
                      }
                  });

                } else {
                    // alert(JSON.stringify(err));
                }
            });
        })
    }
    $('.hides').on('tap', function() {
        api.closeWin();
    })
    $('.lookDetail').on('tap',function(){
        $('.big_img').show()
    })
    $('.delete').on('tap',function(){
        $(this).parents('.big_img').hide()
    })
</script>


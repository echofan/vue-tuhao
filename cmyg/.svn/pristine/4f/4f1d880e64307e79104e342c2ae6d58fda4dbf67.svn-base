<!DOCTYPE HTML>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="maximum-scale=1.0, minimum-scale=1.0, user-scalable=0, initial-scale=1.0, width=device-width" />
    <meta name="format-detection" content="telephone=no, email=no, date=no, address=no">
    <title>首页</title>
    <link rel="stylesheet" type="text/css" href="../../css/mui.min.css" />
    <link rel="stylesheet" type="text/css" href="../../css/api.css" />
    <link rel="stylesheet" type="text/css" href="../../css/common.css" />
    <link rel="stylesheet" type="text/css" href="../../fonts/iconfont.css" />
    <style>
        #page-home {
            position: relative;
        }
        /* 修复 空隙*/

        .home-slider-wrap {
            margin-top: -1px;
            /*height: 181px;*/
            width: 100%;
            background: #f5f5f5;
        }

        .home-slider-wrap img {
            /*height: 180px;*/
            width: 100%;
            background-size: cover;
        }

        .home-entry-wrap {
            display: flex;
            display: -webkit-flex;
            padding: 10px 20px;
            border-bottom: 1px solid #ddd;
        }

        .home-entry-wrap>div {
            flex: auto;
            font-size: 13px;
            text-align: center;
        }

        .home-entry-wrap .iconfont {
            height: 35px;
            line-height: 35px;
            width: 35px;
            border-radius: 50%;
            background: #E60144;
        }

        .home-entry-wrap .iconfont::before {
            color: #fff;
            font-size: 20px;
        }

        .home-product-list {
            /*display: flex;*/
            /*display:-webkit-box;*/
            /*display:-webkit-flex;*/
            /*flex-wrap: wrap;
        justify-content: space-between;*/
            margin-top: 10px;
            padding-left: 3.6%;
            overflow: hidden;
        }

        .product-item-card {
            border: 1px solid #eee;
            text-align: center;
            color: #333;
            width: 46%;
            margin-bottom: 10px;
            margin-right: 4%;
            float: left;
        }

        .product-item-card:last-child:nth-child(2n+1) {
            align-self: flex-start;
        }

        .product-item-card .product-img {
            width: 100%;
            height: 7rem;
            padding: 4px;
        }

        p.title {
            /*overflow: hidden;*/
            /*display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;*/
            border-top: 1px solid #ddd;
            font-size: 13px;
            color: #333;
            padding: 5px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
                padding-bottom: 0;
            /*word-break: break-all;*/
        }

        .price-line {
            display: flex;
            display: -webkit-flex;
            justify-content: space-between;
            padding: 5px 5px;
            padding-top: 0;
        }

        .price-line .price {
            color: #E60144;
            font-size: 16px;
        }

        .price-line .points {
            color: #666;
        }

        .icon-qian:before {
            color: #E60144;
        }

        .icon-jewelry::before {
            color: #999;
        }
        .load-more{display:none;}
        .recommend{padding: 0 3.6%;margin-top: 10px;}
    </style>
</head>

<body>
    <div id="page-home" class="page">
        <div class="home-slider-wrap">
        </div>

        <div class="home-entry-wrap">
            <div data-ids='1' class="home-item homes1">
                <i class="iconfont icon-share"></i>
                <span>我的推广</span>
            </div>
            <div class="jf-give">
                <i class="iconfont icon-donate"></i>
                <span>线下消费</span>
            </div>
            <div data-ids='0' class="home-item homes0">
            <!-- <div data-ids='0' class="homes0 tuiguang"> -->
                <i class="iconfont icon-logistic"></i>
                <span>联盟推广</span>
            </div>
            <div data-ids='4' class="homes4 shengji">
            <!-- <div data-ids='4' class="not"> -->
                <i class="iconfont icon-deal"></i>
                <span>会员升级</span>
            </div>
            <div class="ckActive">
                <i class="iconfont icon-active"></i>
                <span>推客激活</span>
            </div>
        </div>
        <!-- <div class="recommend">
            <img src="../../image/list2.png" alt="" style="width:100%;">
        </div> -->
        <div class="home-product-list">
        </div>
        <p class="load-more"></p>
    </div>
</body>
<script type="text/javascript" src="../../script/api.js"></script>
<script type="text/javascript" src="../../script/mui.min.js"></script>
<script type="text/javascript" src="../../script/zepto.min.js"></script>
<script type="text/javascript" src="../../script/common.js"></script>
<script type="text/javascript">

    var productListAjax = app.ajaxWithLoadMore({
        url: 'goods/list',
        type: 'GET',
        header: {
            token: app.token,
            pageSize: 20,
            pageNum: 1,
            keyword : ''
        },
        showLoading: false,
        success: function(rst) {
          console.log(JSON.stringify(rst))
            if(productListAjax.status === 'NOMORE') return;
            if (productListAjax.status === 'REFRESH') $('.home-product-list').html('') // 刷新 清空数据
            for(i in rst.data){
                var htmlA = '<div class="product-item-card product-item" data-id="' + rst.data[i].id + '" data-productid="' + rst.data[i].productid + '"  data-goodsid="' + rst.data[i].goodsid + '" data-classid="' + rst.data[i].classid + '" data-typeid="' + rst.data[i].typeId + '">' +
                    '<img class="product-img" src="' + rst.data[i].imgurl + '">' +
                    '<p class="title">' + rst.data[i].title + '</p>' +
                    '<div class="price-line">' +
                    '<i class="iconfont icon-qian"><span class="price">' + rst.data[i].price + '</span></i>' +
                    '<i class="iconfont icon-jewelry"><span class="points">' + rst.data[i].shopscore + '</span></i>' +
                    '</div>' +
                    '</div>';
                    $(".home-product-list").append(htmlA)
            }
            var items=$('.product-item-card')
            if(items.length>7){
               $('.load-more').show()
            }
            api.refreshHeaderLoadDone()
        }
    })

    function pageInit() {
        // 获取轮播图
        app.ajax({
            url: 'cms/imgList',
            showLoading: false,
            header: {
                token: app.token
            },
            success: function(rst) {
                var slider
                $('.home-slider-wrap').html(app.template.slider({
                    id: 'home-slider',
                    data: rst.data.list
                }))
                slider = mui('#home-slider')
                slider.slider({
                    interval: 4000
                })
                api.refreshHeaderLoadDone()
            }
        })
            // 获取商品列表
        productListAjax.init()()
    }
    apiready = function() {
        // api.setStatusBarStyle({
        //     style: 'dark',
        //     color: '#E60144'
        // });
        // var statusBarAppearance = api.statusBarAppearance;
            app.ready()
            // 页面数据初始化
            pageInit()
            // 下拉刷新
            api.setRefreshHeaderInfo({
                    bgColor: '#fff',
                    textColor: '#333',
                    textDown: '下拉刷新...',
                    textUp: '松开刷新...'
                }, function(ret, err) {
                  app.ready()
                  api.sendEvent({
                      name: 'nums',
                      extra: {
                          key1: 'value1',
                          key2: 'value2'
                      }
                  });
                  api.execScript({
                      name: 'root',
                      script: 'ors();'
                  });

                    //在这里从服务器加载数据，加载完成后调用api.refreshHeaderLoadDone()方法恢复组件到默认状态
                    pageInit() // 刷新首页数据
                })
                // 底部加载更多
            api.addEventListener({
                  name: 'scrolltobottom'
                }, function(ret, err) {
                  app.ready()
                  app.throttle(productListAjax);
                })
                // 选择商品
            mui('.page').on('tap', '.product-item', function(e) {
                var $that = $(this)
                api.openWin({
                    name: 'product-detail',
                    url: '../shop-frames/product-detail.html',
                    reload: true,
                    pageParam: {
                        goodsId: $that.data('goodsid'),
                        productId: $that.data('productid')
                        // token: app.token
                    },
                    animation: {
                        type: 'movein',
                        duration: 200
                    }
                })
            })
        }

        // $('.tuiguang').on('tap',function(){
        //   api.openWin({
        //       name: 'userType',
        //       url: '../win/userType.html',
        //       pageParam: {
        //           tg_id: 2,
        //       },
        //       animation: {
        //           type: 'movein',
        //           duration: 200
        //       }
        //   });
        // })
        //跳转推广
    var homes = $('.home-item')
    for (var i = 0; i < homes.length; i++) {
        $(homes[i]).on('tap', function() {
            var idxs = $(this).attr('data-ids')
            api.openWin({
                name: 'fan',
                url: '../tg-frames/index.html',
                reload: true,
                pageParam: {
                    tg_id: 2,
                    homes: idxs
                },
                animation: {
                    type: 'movein',
                    duration: 200
                }
            });
        })
    }


    //jf-give
    $('.jf-give').on('tap', function() {
        // api.openWin({
        //     name: 'consumptionLine',
        //     url: '../shop-frames/consumptionLine.html',
        //     pageParam: {
        //         name: 'test'
        //     }
        // });

        api.openWin({
            name: 'shopLine',
            url: '../common-frames/shopLine-bar.html',
            pageParam: {
                name: 'test'
            }
        });



    });


    $(".recommend").on("tap",function(){
        api.openWin({
            name: 'recommend',
            url: '../win/recommend.html',
            pageParam: {
                name: 'test'
            }
        });

    })
    //ckActive
    $('.ckActive').on('tap', function() {
        api.openWin({
            name: 'ckActive',
            url: '../push-gift/index.html',
            pageParam: {
                ck_id: 1
            }
        });

    })
    $('.shengji').on('tap',function(){
      api.openWin({
          name: 'ckActive',
          url: '../me-frames/tiyan.html',
          pageParam: {
              ck_id: 1
          },
          animation: {
              type: 'movein',
              duration: 200
          }
      });
    })
    $('.not').on('tap',function(){
        app.toast('敬请期待~~')
    })
</script>

</html>

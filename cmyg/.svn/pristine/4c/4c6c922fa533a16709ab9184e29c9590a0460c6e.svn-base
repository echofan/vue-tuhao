      .condition{margin-top:5px;background-color: #fff;}
      .condition div{display:flex;height: 50px;line-height: 50px;padding:0 20px;border-bottom: 1px solid #ccc;}
      .condition div span:nth-child(1){flex:3;}
      .condition div span:nth-child(2){flex:3;text-align: center;}
      .condition div span:nth-child(3){flex:2;text-align: right;}
      .condition div:nth-child(1) i{background:url(../../image/cks/23464346.png) no-repeat;width: 20px;height: 20px;background-size: 100%;display:inline-block;vertical-align:middle;margin-right:5px;}
      .condition div:nth-child(2) i{background:url(../../image/cks/4234643.png) no-repeat;width: 20px;height: 20px;background-size: 100%;display:inline-block;vertical-align:middle;margin-right:5px;}
      .condition div:nth-child(3) i{background:url(../../image/cks/324236543.png) no-repeat;width: 20px;height: 20px;background-size: 100%;display:inline-block;vertical-align:middle;margin-right:5px;}
      .activate{height: 60px;line-height: 60px;padding:0 15px;background-color: #fff;color:#797979;fonr-size:20px;margin-top:15px;}
      .activate span:nth-child(2){width: 100px;height: 40px;line-height: 40px;background-color: #E61C4C;color:#fff;fone-size:16px;text-align: center;border-radius:8px;float:right;margin-top:10px;}
      .player{width: 80%;position: fixed;top:50%;margin-top:-50px;left:50%;margin-left:-40%;background-color:#585656;padding:20px 15px 15px 15px;z-index:1000;display:none;}
      .player p{color:#fff;}
      .player .bottom{width: 100%;height: 50px;margin-top:10px;}

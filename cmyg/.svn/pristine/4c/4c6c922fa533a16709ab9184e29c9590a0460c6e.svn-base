<script type="text/javascript" src="../../script/api.js"></script>
<script type="text/javascript" src="../../script/mui.min.js"></script>
<script type="text/javascript" src="../../script/zepto.min.js"></script>
<script type="text/javascript" src="../../script/common.js"></script>
<script type="text/javascript" src="../../script/md5.min.js"></script>
<script type="text/javascript">
  function readys(){
    app.ajax({
       url:'member/level/getNextLevel',
       data:{
         token: $api.getStorage('token'),
         memberId: $api.getStorage('memberId')
       },
       success:function(data){
         console.log(JSON.stringify(data))
         $('.name1').html(data.data.nextRemark1)
         $('.name2').html(data.data.nextRemark2)
         $('.name3').html(data.data.nextRemark3)
         $('#imgs').attr('src',data.data.nextBigLogo)
         $('.player1').attr('data-num',data.data.targetStartupSscore)
         $('.level1 .nums').html(data.data.currentStartupSscore)
         if(data.data.targetStartupSscore<data.data.currentStartupSscore) $('.Startup .ors').html('已完成')
         if(data.data.targetPromotionScore<data.data.currentPromotionScore) $('.promotion .ors').html('已完成')
         if(data.data.targetConsumeScore<data.data.currentConsumeScore) $('.consume .ors').html('已完成')
         if(data.data.targetStartupSscore>0){
            $('.Startup').show()
            $('.Startup .sps').html(data.data.currentStartupSscore+'/'+data.data.targetStartupSscore)
         }else{
           $('.Startup').hide()
         }
         if(data.data.targetPromotionScore>0){
            $('.promotion').show()
            $('.promotion .sps').html(data.data.currentPromotionScore+'/'+data.data.targetPromotionScore)
         }else{
           $('.promotion').hide()
         }
         if(data.data.targetConsumeScore>0){
            $('.consume').show()
            $('.consume .sps').html(data.data.currentConsumeScore+'/'+data.data.targetConsumeScore)
         }else{
           $('.consume').hide()
         }
         if(data.data.upLevelFlag==false){
             $('.user span').html('未激活')
             $('.grade').html('<img src="../../image/cks/cks.png" alt="">')
             $('.level2').hide()
             $('.level3').hide()
         }else{
             $('.user span').html('<img src="../../image/cks/31254543.png" alt="">')
             $('.grade').html('<img src="'+data.data.curBigLogo+'" alt="">')
             $('.level2').html('￥'+data.data.award+'元')
             $('.level2').attr('fen',data.data.award)
             $('.level3').html('领取津贴')

         }
          api.refreshHeaderLoadDone()
       }
    })
  }
    apiready = function() {
        app.ready()
        readys()
        api.setRefreshHeaderInfo({
            bgColor: '#fff',
            textColor: '#333',
            textDown: '下拉刷新...',
            textUp: '松开刷新...'
        }, function(ret, err) {
            //在这里从服务器加载数据，加载完成后调用api.refreshHeaderLoadDone()方法恢复组件到默认状态
            window.location.reload()
            // readys()
        })
    };
    $('.haves').on('tap',function(){
        $('.player1').show()
        var nums=$('.player').attr('data-num')
        if(nums==2000){
          $('.player1 p').html('您已达成条件将消耗'+nums+'创业分升级创客LV1')
        }else if(nums==5000){
           $('.player1 p').html('您已达成条件将消耗'+nums+'创业分升级创客LV2')
        }else if(nums==10000){
           $('.player1 p').html('您已达成条件将消耗'+nums+'创业分升级创客LV3')
        }
    })
    // 升级
    $('.player1 .yes').on('tap',function(){
        app.ajax({
           url:'member/level/upLevel',
           data:{
             token: $api.getStorage('token'),
             memberId: $api.getStorage('memberId')
           },
           success:function(data){
              console.log('----------'+JSON.stringify(data))
              // ready()
              if(data.code==0){
                 app.toast('升级成功！')
                 window.location.reload()
                //  readys()
              }
           }
        })
    })
    $('.player1 .nos').on('tap',function(){
       $('.player1').hide()
    })
    $('.explain').on('tap',function(){
      api.openWin({
          name: 'explain',
          url: './explain.html',
          pageParam: {
              name: 'test'
          }
      });
    })
    $('.level3').on('tap',function(){
        $('.player2').show()
        nums=$('.level2').attr('fen')
        $('.player p').html('您将消耗'+nums+'创业分申请津贴')
    })
  $('.player2 .yes').on('tap',function(){
    app.ajax({
      url:'member/level/getAward',
      data:{
        token: $api.getStorage('token'),
        memberId: $api.getStorage('memberId')
      },
      success:function(data){
        // alert(JSON.stringify(data))
        if(data.code==0){
          alert(data.msg)
          window.location.reload()
        }
      }
    })
  })
  $('.player2 .nos').on('tap',function(){
      $('.player2').hide()
  })
</script>


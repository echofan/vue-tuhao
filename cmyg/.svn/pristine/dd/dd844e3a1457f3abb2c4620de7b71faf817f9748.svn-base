<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>购物分明细</title>
    <link rel="stylesheet" type="text/css" href="../../../../css/mui.min.css" />
    <link rel="stylesheet" type="text/css" href="../../../../css/api.css" />
    <link rel="stylesheet" type="text/css" href="../../../../css/common.css" />
    <link rel="stylesheet" type="text/css" href="../../../../fonts/iconfont.css" />
    <link rel="stylesheet" href="./index.css">
</head>

<body>
    <div class="allOrder">
        <span class="allOrderTitle">合计消费</span>
        <i></i>
        <span class="allOrderNum"></span>
    </div>
    <!-- 购物分 -->
    <div class="tables duihuan">
        <div class="tablesTitle">
            <span class="titTime">时间</span>
            <span class="titShop">购物单号</span>
            <span class="titInt">购物分</span>
        </div>
        <div class="tablesCont">
            <ul class="tablesContUl">
                <!-- <li>
              <span class="contTime">2017-04-29  10:59</span>
              <span class="contShop">45278121000000</span>
              <span class="contInt">30</span>
            </li> -->

            </ul>
            <div class="thisNull" style="margin-top:200px;display:none;">
                <p style="text-align:center;">暂无数据...</p>
            </div>
        </div>
    </div>
</body>
<script type="text/javascript" src="../../../../script/api.js"></script>
<script type="text/javascript" src="../../../../script/mui.min.js"></script>
<script type="text/javascript" src="../../../../script/template-native.js"></script>
<script type="text/javascript" src="../../../../script/zepto.min.js"></script>
<script type="text/javascript" src="../../../../script/common.js"></script>
<script src="./index.js"></script>
<script>
    apiready = function() {

        $(".allOrderTitle").text("合计获得")
        app.ready()

        app.ajax({
            url: 'score/record/buyDetail',
            type: 'get',
            data: {
                token: $api.getStorage('token'),
                memberId: $api.getStorage('memberId'),
                pageSize: '10',
                pageNum: '1'
            },
            success: function(ret) {
                console.log(JSON.stringify(ret))
                $(".tablesContUl").html('');
                if(ret.data == '' || null){
                    $(".thisNull").show()
                }else{
                    $(".thisNull").hide()
                }
                for (i in ret.data) {
                    var times = formatDateTime(ret.data[i].paymentTime)
                    var gouwuHtml = '<li>' +
                        '<span class="contTime">' + times + '</span>' +
                        '<span class="contShop">' + ret.data[i].orderGoodsNum + '</span>' +
                        // '<span class="contOrder">￥'+(ret.data[i].totalPrice)/100+'</span>'+
                        '<span class="contInt">' + ret.data[i].getShopScore + '</span></li>';
                    $(".tablesContUl").append(gouwuHtml);
                }
            }
        })
        app.ajax({
                url: 'score/record/buyDetailCount',
                type: 'get',
                data: {
                    token: $api.getStorage('token'),
                    memberId: $api.getStorage('memberId')
                },
                success: function(ret) {
                    // alert(JSON.stringify(ret.data.count))
                    $(".allOrderNum").text(ret.data.count)
                }
            })
            // 下拉刷新
        api.setRefreshHeaderInfo({
            bgColor: '#fff',
            textColor: '#333',
            textDown: '下拉刷新...',
            textUp: '松开刷新...'
        }, function(ret, err) {
            //在这里从服务器加载数据，加载完成后调用api.refreshHeaderLoadDone()方法恢复组件到默认状态
            window.location.reload()
            api.refreshHeaderLoadDone()
        })
    }
</script>

</html>
